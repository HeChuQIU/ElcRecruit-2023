@page "/IdentityServerTest"
@model interviewer.Pages.IdentityServerTestModel
@using Microsoft.AspNetCore.Authentication
@{
    <a href="/logout"><h4>Log Out</h4></a>
    <h2>Claims</h2>

    <dl>
        @foreach (var claim in User.Claims)
        {
            <dt>@claim.Type</dt>
            <dd>@claim.Value</dd>
        }
    </dl>

    <h2>Properties</h2>

    <dl>
        @foreach (var prop in (await HttpContext.AuthenticateAsync()).Properties?.Items)
        {
            <dt>@prop.Key</dt>
            <dd>@prop.Value</dd>
        }
    </dl>
}
